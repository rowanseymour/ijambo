<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>Ijambo SMS Game</display-name>
	
	<servlet>
        <servlet-name>play</servlet-name>
        <servlet-class>com.ijuru.ijambo.web.PlayServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>play</servlet-name>
        <url-pattern>/play</url-pattern>
    </servlet-mapping>

	<listener>
		<listener-class>com.ijuru.ijambo.web.Listener</listener-class>
	</listener>
	
</web-app>
